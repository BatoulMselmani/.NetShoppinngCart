@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewData["Title"] = "Roles";
}

<h1 class="col-md-4 offset-md-2">Roles</h1>

<p>
    <a asp-action="Create" class="col-md-4 offset-md-2">Create New</a>
</p>
<table class="table col-md-6 offset-md-2">
    <thead>
     <tr>

         <th>Role</th>
         <th>Users</th>
         <th></th>


     </tr>
    </thead>
    <tbody>
@foreach (var role in Model) {
        <tr >
            
            <td>
                @role.Name
            </td>
            <td user-role="@role.Id"></td>
              
            
           
            <td>
                <a asp-action="Edit" asp-route-id ="@role.Id">Edit</a> |
                    <a class = "confirmDeletion" asp-action="Delete" asp-route-id="@role.Id">Delete</a>
                  
            </td>
        </tr>
}
    </tbody>
</table>

